<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="110dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/linear_left"
            android:layout_centerVertical="true">
        <ImageView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:id="@+id/img_store"
                android:src="@drawable/temp"
                android:scaleType="fitXY"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200￥"
                android:id="@+id/txt_amount"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"/>
    </LinearLayout>
    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/linear_left"
            android:layout_alignTop="@+id/linear_left"
            android:id="@+id/relative_center"
            android:layout_toLeftOf="@+id/relative_right"
            android:layout_alignBottom="@+id/linear_left">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HTC One系列免费换膜！！"
                android:id="@+id/txt_title"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HTC正佳店"
                android:id="@+id/txt_store_name"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" android:layout_below="@+id/txt_title"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.2分  1983评"
                android:id="@+id/txt_points"
                android:textSize="12dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/relative_center"
            android:id="@+id/relative_right"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/linear_left"
            android:padding="5dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015.5.1 12:56"
                android:id="@+id/txt_date"
                android:textSize="10dp"
                android:layout_alignParentRight="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1205米"
                android:id="@+id/txt_distance"
                android:layout_below="@+id/txt_date"
                android:textSize="12dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="3dp"/>
        <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:id="@+id/btn_contact"
                android:layout_below="@+id/txt_distance"
                android:background="@null"
                android:src="@drawable/phone_call"
                android:scaleType="center"
                android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/d_base_color_text_gray"/>
</RelativeLayout>